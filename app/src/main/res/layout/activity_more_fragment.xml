<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

   <include layout="@layout/tool_bars"
    android:id="@+id/RR_toolbar"/>

    <LinearLayout
        android:layout_below="@+id/RR_toolbar"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:padding="18dp"
            android:id="@+id/RR_career"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/img_career"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/career"/>
            <TextView
                android:id="@+id/txt_career"
                android:layout_toRightOf="@id/img_career"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Career"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <View
            android:layout_below="@+id/img_career"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/LightGrey"/>

        <RelativeLayout
            android:id="@+id/RR_blog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="18dp"
        >
            <ImageView
                android:id="@+id/img_bog"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/blog"/>
            <TextView
                android:id="@+id/txt_blog"
                android:layout_toRightOf="@id/img_bog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blog"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <View
            android:layout_below="@+id/img_bog"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/LightGrey"/>

        <RelativeLayout
            android:id="@+id/RR_contactus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="18dp">
        <ImageView
            android:id="@+id/img_call"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/call"/>
        <TextView
            android:layout_toRightOf="@id/img_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"/>

    </RelativeLayout>
        <View
            android:layout_below="@+id/img_call"
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="@color/LightGrey"/>
    </LinearLayout>

</RelativeLayout>