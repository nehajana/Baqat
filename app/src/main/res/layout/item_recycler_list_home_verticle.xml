<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="7dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:background="@color/black"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/baby_icon"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:background="@color/White"
            android:layout_below="@+id/imgUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Getting Married"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_below="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Planning a wedding can feel pretty at first, It Just takes a bit of organization to keep everything on track BAQAT"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/Gray"
                    />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/txt_description"
                    android:id="@+id/Read_more_btn"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/White"
                    android:text="Read More"
                    android:textSize="16dp"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/read_more"
                    />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
