<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:padding="10dp"
                android:id="@+id/txt_bussiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top News"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/DarkPurple"/>
            <View
                android:id="@+id/view"
                android:layout_below="@+id/txt_bussiness"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightgray"/>


            <LinearLayout
                android:layout_below="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

               <LinearLayout
                   android:padding="5dp"
                   android:layout_marginTop="10dp"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction Status"
                        android:textSize="14dp"
                        />
                  <TextView
                      android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction Id"
                      android:textSize="14dp"

                      />
                  <TextView
                      android:layout_marginTop="5dp"
                      android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchesing Date"
                      android:textSize="14dp"

                      />
                  <TextView
                      android:layout_marginTop="5dp"
                      android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expire Date"
                      android:textSize="14dp"

                      />
                  <TextView
                      android:layout_marginTop="5dp"
                      android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                      android:textSize="14dp"

                      />

               </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Success"
                        android:textColor="@color/black"
                        android:textSize="14dp"

                        />
                    <TextView
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3956122544"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                    <TextView
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25/11/2019"
                        android:textSize="14dp"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20/12/2019"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AED 230"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>


            </LinearLayout>




        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>


