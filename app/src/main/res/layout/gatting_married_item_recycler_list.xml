<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_below="@+id/RR_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    android:background="@color/White"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="5dp"
            android:id="@+id/RR_wedding_event"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/img_restaurants_catering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/restaurants_catering"
                />

            <TextView
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/img_restaurants_catering"
                android:id="@+id/txt_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wedding Evwent-"
                android:textColor="@color/black"
                android:textSize="16dp"/>


        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>


